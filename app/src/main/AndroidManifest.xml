<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dynamica.alaport">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dynamica.alaport.MainActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dynamica.alaport.StartActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dynamica.alaport.Lang"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dynamica.alaport.TicketActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"/>

        <receiver
            android:name="com.dynamica.alaport.NotificationPublisher"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.dynamica.alaport.AlaportInfoActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dynamica.alaport.HealthyInfoActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"/>
        <activity android:name="com.dynamica.alaport.WebActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.dynamica.alaport.SoglActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>