<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dynamica.alaport.Fragment.VipFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/blueDrawer">

            <TextView
                android:textSize="17sp"
                android:textColor="@color/whity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/raspNamr"
                android:text="VIP"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:onClick="CloseDr"
                android:layout_marginRight="10sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" >
                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/opDr"
                    android:onClick="CloseDr"
                    android:layout_gravity="center"
                    android:background="@drawable/onclose"
                    />
            </FrameLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:background="@drawable/vip_wall"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Ф.И.О."
                android:paddingTop="2sp"
                android:paddingBottom="2sp"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary11A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vipname" />

            <EditText
                android:layout_width="match_parent"
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:inputType="textPersonName"
                android:hint="Введите ФИО"
                android:imeOptions="actionDone"
                android:textColorHint="@color/whity"
                android:text=""
                android:ems="10"
                android:id="@+id/editName" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#517dac"
                android:layout_marginBottom="30sp"/>

            <TextView
                android:text="Номер рейса"
                android:paddingTop="2sp"
                android:paddingBottom="2sp"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary11A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/racenum" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:background="#00000000"
                android:textColor="@color/white"
                android:inputType="textPersonName"
                android:hint="Введите корректный номер рейса"
                android:imeOptions="actionDone"
                android:textColorHint="@color/whity"
                android:text=""
                android:ems="10"
                android:id="@+id/editRace" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#517dac"
                android:layout_marginBottom="30sp"/>

            <TextView
                android:id="@+id/phonenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2sp"
                android:paddingTop="2sp"
                android:text="Номер телефона"
                android:textColor="@color/colorPrimary11A"
                android:textSize="15sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:textSize="17sp"
                android:background="#00000000"
                android:textColor="@color/white"
                android:inputType="phone"
                android:hint="Номер телефона"
                android:textColorHint="@color/whity"
                android:text=""
                android:ems="10"
                android:id="@+id/editPhone" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#517dac"
                android:layout_marginBottom="30sp"/>

            <TextView
                android:id="@+id/vipMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2sp"
                android:paddingTop="2sp"
                android:text="Эл. почта"
                android:textColor="@color/colorPrimary11A"
                android:textSize="15sp" />
            <EditText
                android:layout_width="match_parent"
                android:imeOptions="actionDone"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:background="#00000000"
                android:inputType="textEmailAddress"
                android:hint="Электронный адрес"
                android:textColorHint="@color/whity"
                android:text=""
                android:ems="10"
                android:id="@+id/editMail" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#517dac"
                android:layout_marginBottom="30sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/sendLayout"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:text="Отправить"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/whity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView153"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_marginLeft="10sp"
                        android:layout_gravity="center"
                        android:layout_height="17dp"
                        app:srcCompat="@drawable/arrow"
                        android:id="@+id/imageView57"
                        android:layout_weight="1" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/framevip">

            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
