<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dynamica.alaport.TicketActivity"
    android:background="@drawable/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="10sp"
        android:id="@+id/arrs2"
        android:background="@drawable/mybutton"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_above="@+id/arrs1"
        android:layout_alignParentStart="true">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="за 30 минут"
            android:id="@+id/butt3"
            android:gravity="center_vertical"
            android:layout_marginLeft="20sp"
            android:textColor="@color/whity"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/arrs"
        android:background="@drawable/mybutton"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_above="@+id/arrs2"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="по Факту"
            android:id="@+id/butt1"
            android:gravity="center_vertical"
            android:layout_marginLeft="20sp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="10sp"
        android:id="@+id/arrs1"
        android:background="@drawable/mybutton"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="за 1 час"
            android:id="@+id/butt"
            android:gravity="center_vertical"
            android:layout_marginLeft="20sp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>
