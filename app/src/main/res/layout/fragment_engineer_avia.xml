<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dynamica.alaport.Fragment.EngineerAviaFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/blueDrawer"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20sp">

                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="100sp"
                    app:srcCompat="@drawable/logo"
                    android:id="@+id/imageView28"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <TextView
                android:text="Основные функции ИАС:"
                android:textColor="#fff"
                android:textSize="20sp"
                android:paddingTop="5sp"
                android:paddingLeft="30sp"
                android:paddingRight="100sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView120" />

            <LinearLayout
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30sp"
                android:paddingRight="50sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/redline"
                    android:layout_gravity="center"
                    android:id="@+id/imageView41"
                    android:layout_weight="20" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:text="Обеспечение встречи-выпуска воздушных судов"
                    android:textColor="@color/whity"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView88"
                    android:layout_weight="2" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30sp"
                android:paddingRight="50sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/redline"
                    android:layout_gravity="center"
                    android:id="@+id/imageView1"
                    android:layout_weight="20" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:text="Техническое обслуживание ВС по  транзитной форме"
                    android:textColor="@color/whity"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView1"
                    android:layout_weight="2" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30sp"
                android:paddingRight="50sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/redline"
                    android:layout_gravity="center"
                    android:id="@+id/imageView2"
                    android:layout_weight="20" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:text="Предоставление спец.техники для  обслуживания ВС"
                    android:textColor="@color/whity"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView2"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30sp"
                android:paddingRight="50sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/redline"
                    android:layout_gravity="center"
                    android:id="@+id/imageView4"
                    android:layout_weight="20" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:text="Диайсинг"
                    android:textColor="@color/whity"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView4"
                    android:layout_weight="2" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30sp"
                android:paddingRight="50sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/redline"
                    android:layout_gravity="center"
                    android:id="@+id/imageView5"
                    android:layout_weight="20" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:text="Наружная мойка и внутренняя уборка ВС"
                    android:textColor="@color/whity"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView5"
                    android:layout_weight="2" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30sp"
                android:paddingRight="50sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/redline"
                    android:layout_gravity="center"
                    android:id="@+id/imageView6"
                    android:layout_weight="20" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:text="Слив нечистот и заправка туалетов  ВС хим. жидкостью "
                    android:textColor="@color/whity"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView6"
                    android:layout_weight="2" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30sp"
                android:paddingRight="50sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/redline"
                    android:layout_gravity="center"
                    android:id="@+id/imageView7"
                    android:layout_weight="20" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:text="Заправка ВС азотом, кислородом и  сжатым воздухом "
                    android:textColor="@color/whity"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView7"
                    android:layout_weight="2" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_marginBottom="30sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30sp"
                android:paddingRight="50sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/redline"
                    android:layout_gravity="center"
                    android:id="@+id/imageView3"
                    android:layout_weight="20" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:text="Облив колёс ВС"
                    android:textColor="@color/whity"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView3"
                    android:layout_weight="2" />
            </LinearLayout>

            <TextView
                android:background="#fff"
                android:textColor="#333"
                android:textSize="13sp"
                android:paddingTop="30sp"
                android:paddingLeft="30sp"
                android:paddingRight="40sp"
                android:text="Производственные сооружения и площади для ТО авиационной техники. В 2010 году аэропорт вложил свыше 100 млн. тенге для создания на базе ИАС подразделения «АЛАТЕКНИКС» по линейному обслуживанию воздушных судов западного производства. Это позволило сократить количество задержек ВС по техническим причинам. На данный момент силами аэропорта уже проводится линейное обслуживание ВС МД-11 авиакомпании ФЕДЭКС. Проведение аудита подразделения «АЛАТЕКНИКС» по европейским стандартам,дает возможность допуска для линейногообслуживания европейских грузовых компаний, таких как «КАРГОЛЮКС», «КАРГОИТАЛИЯ» и других."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView122"
                android:paddingBottom="30sp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
