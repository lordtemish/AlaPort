                </RelativeLayout>

                <TextView
                    android:text="Конфиденциальность этих
процедур гарантируется !
"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12" android:textColor="#222"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="1" />
