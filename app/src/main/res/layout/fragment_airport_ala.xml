<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dynamica.alaport.AirportAlaFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blueDrawer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/logo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp">

                <TextView
                    android:text="Международный \nаэропорт сегодня"
                    android:textSize="25sp"
                    android:textColor="@color/whity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView69"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="23dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="Через наш город издревле проходит Великий
Шелковый Путь из Китая в другие уголки земного
шара. Высокий статус ведущего аэропорта
Республики обязывает к постоянному
совершенствованию и повышению качества
оказываемых услуг. Поэтому одним из приоритетных
направлений в программе действий руководства
Алматинского аэропорта является модернизация
технических средств и соответственно повышение
квалификации персонала."
                    android:textColor="@color/whity"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView69"
                    android:layout_alignStart="@+id/textView69"
                    android:layout_marginTop="15dp"
                    android:id="@+id/textView70" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="25sp"
                    android:background="@drawable/alaptry">

                    <TextView
                        android:text="Заключены договоры на предоставление\nназемного обслуживания и с октября начато\nвыполнение полетов авиакомпаниями Волга-\nДнепр, Авиалинии Антонова, а также,\nпроведены переговоры с представителями\nавиакомпании Полет, эксплуатирующими\nгрузовые ВС Ан-124 (Руслан) (макс. взлетная\nмасса 392 тонны);"
                        android:textColor="@color/whity"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView71" />
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="25sp"
                    android:background="@drawable/alaptry">

                    <TextView
                        android:text="Начали выполняться полеты авиакомпаниями\nГазпром и Добролет на ВС Ил-76 (макс. взлетная\nмасса 190 тонн); регулярность 4 рейса в неделю;"
                        android:textColor="@color/whity"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView72" />
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="25sp"
                    android:background="@drawable/alaptry">

                    <TextView
                        android:text="Получены предложения по взаимовыгодному\nсотрудничеству и проведены переговоры с\nпредставителями международных аэропортов \nГанновер, Франкфурт, Берлин, Гандер;"
                        android:textColor="@color/whity"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView73" />
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="25sp"
                    android:background="@drawable/alaptry">

                    <TextView
                        android:text="Проводятся подготовительные работы по\nорганизации переговоров с представителями\nМинистерства Транспорта Люксембурга по\nпривлечению а/к Cargolux к полетам с\nпосадками в а/п Алматы, а также с представи-\nтелями а/к China Southwest Airlines (Китай)."
                        android:textColor="@color/whity"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView74" />
                </FrameLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:background="#FFF">
                <LinearLayout
                    android:paddingTop="20sp"
                    android:paddingLeft="40sp"
                    android:paddingRight="40sp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout">

                    <TextView
                        android:text="Многие ведущие зарубежные авиакомпании уже пользуются нашим аэропортом как для выполнения регулярных рейсов, так и для осуществления технических посадок. "
                        android:textColor="#333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/textView75" />
                </LinearLayout>

                <ImageView
                    android:layout_marginTop="5sp"
                    android:layout_width="300sp"
                    android:layout_height="100sp"
                    app:srcCompat="@drawable/logos"
                    android:id="@+id/imageView29"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
